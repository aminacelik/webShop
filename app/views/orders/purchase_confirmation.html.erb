<div id="confirm_container" class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
  <div class="big"><%= t('.thank_you') %>!</div>

  	<%= t('.you_bought_html') %>: <br>
  
  <div id="product_images">
    <% @order_items.each do |product_variant| %>
      <%= image_tag product_variant.get_order_product_image, class: 'img-responsive col-xs-6 col-sm-4 col-xs-offset-3 col-sm-offset-4' %>
    <% end %><br>
  </div>

   <div class="col-xs-12 big">
	   <%= t('.you_spent_html') %>: <br />
     <%= number_to_currency(@order.price) %>
  </div>
</div>