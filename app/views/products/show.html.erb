
<div id="product_display_form" class="container-fluid">
	
	<div class="product_title row">
		
	
			<%= link_to @product.category_name, category_path(@product.category) %> Â» 
			<%= link_to @product.title, product_path %>

		
		<% if session[:role]=='administrator' %>
			<%= link_to 'Edit', edit_product_path(@product) %> 
      <%= link_to 'Add image', new_product_product_image_path(product_id: @product.id) %>
		<% end %>
	</div>
	
  
  <div class="row">
    
        <div class= "col-xs-12 col-sm-6" id="product_images_slider">

          <% if @image %>
            <%= image_tag @image.image.url(:medium), class: 'img-responsive' %>
          <% else %>

            <ul id="single_item_page_slider">
              <% @images.each do |img| %>
                <li><%= image_tag img.image.url(:medium), class: 'img-responsive' %></li>
              <% end %>
             </ul>

              <div id="bx-pager">
                <% @images.each_with_index do |img, index| %>
                  <a data-slide-index="<%= index %>" href=""><%= image_tag img.get_thumb_image %></a>
                <% end %>
              </div>

          <% end %>
        </div>


        <div class="product_description col-xs-12 col-sm-6">
          
  
           

          <%= render partial: 'add_to_cart', locals: {sizes: @sizes} %>
     
      
      </div>
  
  </div>		
</div>


<div id="similar_products"  class="col-xs-12">
<h2><%= t('.similar_products_html') %></h2>
  
		<% @similar_products.each do |product| %>
				<%= render partial: "products/product", locals: {product: product} %>
		<% end %>
</div>

<script type="text/javascript">
      $(document).ready(function(){
          $('#single_item_page_slider').bxSlider({
            mode: 'fade',
            pagerCustom: '#bx-pager'
          });
        });
</script>