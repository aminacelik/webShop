
<div id="product_display_form" class="container-fluid">
	
	<div class="product_title row">
		
	
			<%= link_to @product.category_name, category_path(@product.category) %> Â» 
			<%= link_to @product.title, product_path %>

		
		<% if session[:role]=='administrator' %>
			<%= link_to 'Edit', edit_product_path(@product) %> 
      <%= link_to 'Add image', new_product_product_image_path(product_id: @product.id) %>
		<% end %>
	</div>
	
  
  <div class="row">
    
        <div class= "col-xs-12 col-sm-6">

          <% if @image %>
            <%= image_tag @image.image.url(:medium), class: 'img-responsive' %>
          <% else %>

            <ul class="bxslider" id='bxslider'>
              <% @images.each do |img| %>
                <li><%= image_tag img.image.url(:medium) %></li>
              <% end %>
             </ul>

              <div id="bx-pager">
                <% @images.each_with_index do |img, index| %>
                  <a data-slide-index="<%= index %>" href=""><%= image_tag img.get_thumb_image %></a>
                <% end %>
              </div>

          <% end %>
        </div>


        <div class="product_description col-xs-12 col-sm-6">
          
  
            <%= @product.description %>
          

          <br><br>

          <br><%= t('.price') %><br>

          <% if @product.on_sale? %>
            <div id="discount_display">
              <div class="price_line">
                <span class="outer">
                  <span class="price">
                    <%= number_to_currency(@product.price) %>
                  </span><br />
                </span>
                <span class="discount">
                  - <%= @product.discount_percent %> %
                </span>
              </div>
              <div class="new_price">
                <small><%= t('.new_price') %></small>
                <%= number_to_currency(@product.sale_price) %>
              </div>
            </div>
          <% else %>
            <div class="price_line">
              <%= number_to_currency(@product.price) %>
            </div>
          <% end %>
          <br><br>


    <% if @product.sold_out? %>
      <div id="sold_out">
        <%= t('.sold_out') %><br />
        <small><%= t('.coming_soon_html') %></small>
      </div>

    <% else %>
      <%= form_tag(line_items_path, method: :post, remote: true) do %>
        <%= hidden_field_tag :product_id, @product.id %>

        <span class="size">
          <%= t('.size_html') %>:<br>
          <%= select_tag "size_id", options_from_collection_for_select(@sizes, :id, :size), {class: 'form-control col-xs-12 col-s-6'} %><br>
        </span>


        <span class="quantity">
          <%= t('.quantity_html') %>:<br>
          <%= number_field :quantity, params[:quantity], value: '1', class: 'form-control' %><br>
        </span>

    

        <% unless session[:role]=='administrator' %>
          <%= submit_tag t('.add_html'), class: 'button', onclick: "fly_to_cart()" %>
        <% end %>

    <% end %>
        </div>
  
  </div>
<% end %>			
</div>


<div id="similar_products"  class="container-fluid">
<h2><%= t('.similar_products_html') %></h2>
  
		<% @similar_products.each do |product| %>
				<%= render partial: "products/product", locals: {product: product} %>
		<% end %>
</div>

<script type="text/javascript">
      $(document).ready(function(){
          $('#bxslider').bxSlider({
            mode: 'fade',
            pagerCustom: '#bx-pager'
          });
        });
</script>