<h2>Sizes and colors for product</h2>


	<div id="product_in_list">
<!--		<%= image_tag(@product.image_url) %>-->
		<div class="product_list_details">
		 	Model: <%= @product.title %><br>
         	<%= truncate(strip_tags(@product.description), length: 100) %><br>
		</div>
  	
		<div id="product_price">
			Price: <strong><%= number_to_currency(@product.price) %><br>
		</div>
	</div>




<table>
	<tr>
		<th>Product</th>
		<th>Color</th>
		<th>Size</th>
		<th>Quantity</th>
	</tr>
	<%=  @product_variants.each do |pv| %>
	
		<tr>
			<td><%= pv.product.title %></td>
			<td><%= pv.color.name %></td>
			<td><%= pv.size.size %></td>
			<td><%= pv.quantity %></td>
		</tr>
	
<% end %>

</table>


<%= link_to 'New Product variant', new_product_variant_path(product_id: params[:product_id]) %>
