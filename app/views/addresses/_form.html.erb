<div id="address_form">

<%= form_for(@address) do |f| %>
  <% if @address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :street_name %><br>
    <%= f.text_field :street_name %><br>
	<%= f.label :street_number %><br>
    <%= f.number_field :street_number %>
  </div>


  <div class="field">
    <%= f.label :floor %><br>
    <%= f.number_field :floor %><br>
	<%= f.label :flat %><br>
    <%= f.text_field :flat %>
  </div>

  <div class="field">
    <%= f.label :address_type %><br>
    <%= f.collection_select :address_type_id, AddressType.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :city %><br>
    <%= f.collection_select :city_id, City.all, :id, :name %>
  </div>
  <div class="dugmad">
    <%= f.submit 'Add Address', class: 'grey_button' %>
	<%= button_to 'Cancel', addresses_path(@current_user.id), method: :get, class: 'cancel_button' %>
  </div>
<% end %>

</div>
