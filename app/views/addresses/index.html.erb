<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street name</th>
      <th>Street number</th>
      <th>Floor</th>
      <th>Flat</th>
      <th>Default</th>
      <th>User</th>
      <th>Address type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street_name %></td>
        <td><%= address.street_number %></td>
        <td><%= address.floor %></td>
        <td><%= address.flat %></td>
        <td><%= address.default %></td>
        <td><%= address.user.name %></td>
        <td><%= address.address_type.name %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

