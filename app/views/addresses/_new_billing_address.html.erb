<div name="billing_form" id="billing_form" class="address_form col-xs-12">

<%= form_for(@new_billing, role: 'form') do |f| %>
  <div class="title"><%= t('.billing_address_html') %></div>

  <% if @new_shipping %>
    <div class="checkbox">
     <%= f.check_box 'shipping', {checked: false, onchange: "hide_billing_form()", class: 'checkbox'} %> <%= t('.the_same') %>
   </div>
  <% end %>



  <div class="form-group">
    <%= f.label :first_name, t('.first_name') %><br>
    <%= f.text_field :first_name, class: 'form-control' %><br>
    <%= f.label :last_name, t('.last_name') %><br>
    <%= f.text_field :last_name, class: 'form-control' %><br>
  </div>



  <div class="form-group">
    <%= f.label :street_name, t('.street_name') %><br>
    <%= f.text_field :street_name, class: 'form-control' %><br>
    <%= f.label :street_number, t('.street_number') %><br>
    <%= f.number_field :street_number, class: 'form-control' %><br>
    <%= f.label :details, t('.details') %><br>
    <%= f.text_field :details, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= f.label :city, t('.city') %><br>
    <%= f.collection_select :city_id, City.all, :id, :name, {}, {class: "form-control"} %>
  </div>   



  <%= f.hidden_field :billing, value: true %>
  <%= f.submit t('.add_address'), class: 'btn btn-default grey_button' %>
<% end %>

</div>
