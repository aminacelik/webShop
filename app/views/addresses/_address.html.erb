<div class="user_address_wrap col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <%= link_to addresses_select_address_path(id: address.id, type: type), method: :post do %>
    <span class="user_address">
      <%= address.first_name %> <%= address.last_name %><br>
      <%= address.street %>, <%= address.details %><br>
      <%= address.city_details %><br>
      <%= address.country_name %><br>
    </span>
  <% end %>
</div>