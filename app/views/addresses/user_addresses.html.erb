<div id="address_container">
  <div id="all_user_addresses">

    <% if @user_addresses.present? %>
      <h1><%= t('.pick_address') %></h1>
      <% @user_addresses.each do |address| %>
     
        <%= render partial: 'address', locals: {address: address, type: @address_type} %>
        
      <% end %>
    <% end %>

    <div class="links">
      <% if params[:type] == 'billing' %>
        <%= link_to t('.new_billing_html'), addresses_new_billing_address_path %> 
      <% else %>
        <%= link_to t('.new_shipping'), new_address_path %> 
      <% end %>
    </div>

  </div>


  <!--  If user is ordering -->
<% unless @cart.number_of_products == 0 %>
  <div class="step"><%= t('.step_2of2') %></div>
  <%= render partial: "carts/order_cart" %>
<% end %>


  <div class="buttons">
    <%=form_tag '/payment/do_payment' do %>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="pk_test_Cnh27zogL5NcjyVeTcLBWmle"
            data-description="Pay for your items"
            data-amount="<%= (@cart.total_delivery_and_products_price*100).to_i%>"></script>
  <% end %>
  </div>
</div>