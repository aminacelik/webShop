<h1>Listing product_translations</h1>

<table>
  <thead>
    <tr>
      <th>Language</th>
      <th>Product</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_translations.each do |product_translation| %>
      <tr>
        <td><%= product_translation.language %></td>
        <td><%= product_translation.product %></td>
        <td><%= product_translation.title %></td>
        <td><%= product_translation.description %></td>
        <td><%= product_translation.price %></td>
        <td><%= link_to 'Show', product_translation %></td>
        <td><%= link_to 'Edit', edit_product_translation_path(product_translation) %></td>
        <td><%= link_to 'Destroy', product_translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

