<%= form_for(@product_translation, html: {role: 'form', class: 'col-xs-12 col-sm-6'}) do |f| %>
  <% if @product_translation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_translation.errors.count, "error") %> prohibited this product_translation from being saved:</h2>

      <ul>
      <% @product_translation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :language_id %><br>
    <%= f.collection_select :language_id, @languages, :id, :name, {}, {class: 'form-control'} %><br>
  </div>
  <div class="form-group">
    <%= f.label :product_id %><br>
    <%= f.collection_select :product_id, @products, :id, :title, {}, {class: 'form-control'} %><br>
  </div>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-default grey_button' %>
  </div>
<% end %>
