<%= form_for(@category, html: { role: 'form', class: 'col-xs-12 col-sm-6'}) do |f| %>


  <div class="form-group">
    <%= f.label :name %><%= errors_for @category, :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>


  <div class="actions">
    <%= f.submit class: 'btn btn-default grey_button' %>
  </div>
<% end %>
