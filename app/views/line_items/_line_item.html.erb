<div id="product_in_cart">
	
	<%= image_tag(line_item.product_variant.product.image_url) %>
	<div class="product_details">
		 <%= line_item.quantity %>&times; <%= line_item.product_variant.product.title %><br>
		Size: <%= line_item.product_variant.size.size %><br>
		Color: <%= line_item.product_variant.color.name %><br>
	</div>
  	
	<div class="product_price">
		Price: <strong><%= number_to_currency(line_item.product_variant.product.price) %><br>
	</div>
			

	<div class="delete_icon">
		<%= link_to image_tag('xic.png'), line_item, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>

</div>