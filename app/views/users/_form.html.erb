<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
    <br><%= @user.errors.full_messages.first %>
  <% end %>
  


<div id="sign_up_data">
	  <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true %><br>

    <script type="text/javascript">
      document.getElementById('name').focus();
    </script>
    
    <%= f.label :email %><br>
    <%= f.email_field :email %><br>
  
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
 
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %><br>


<% if @current_user && @current_user.role.name == 'administrator'  %>
 
	  <%= f.label :role %><br>
	  <%= f.collection_select :role_id, Role.order(:name), :id, :name %><br>

<% end %>

  <div class="actions">
    <%= f.submit 'Create', class: 'grey_button' %>
  </div>


</div>

<% end %>
