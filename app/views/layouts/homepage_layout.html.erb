		</div>
	
		<div id="content">
		
			<%=yield %>
		</div>
		
		
		<div id="footer">
			<div id="copyright">
				<small>Copyright @abhShoes. All rights reserved. </small>
			</div>
			<ul id="footer_menu">
				<li><%= link_to 'Home', store_url %></li>
				<% @categories.each do |c| %>
					<li><%= link_to c.name, category_path(c) %></li>
				<% end %>
			</ul>
		</div>
	</div>
	
</body>

</html>