<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>

  <!-- <label id="code.slt"/> --><%= stylesheet_link_tag    "application", media: "all",
    "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">

  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %>
  </div>
  <div id="columns">
    <div id="side">
		
		<% if @cart %>
			<div id="cart">
				<%= render @cart %>
			</div>
		<% end %>
      	<ul>
			<li><%= link_to 'Home', store_url %></li>			
			
			<% if session[:user_id] %>
<!--			Logovani korisnici -->
				
				<% if @current_user.role.name == 'administrator' %>
					
					<li><%= link_to 'New Role', new_role_url %></li>
					<li><%= link_to 'New User', new_user_url %></li>
					<li><%= link_to 'New Product', new_product_url %></li>
					<li><%= link_to 'All Roles', roles_url %></li>
					<li><%= link_to 'All Users', users_url %></li>
				<% end %>
				<li><%= link_to 'All Products', products_url %></li>
				<li><%= link_to @current_user.name, user_url(@current_user.id) %></li>
				<li><%= link_to 'Log Out', login_url, method: :delete %></li>
				
				
			<% else %>
<!--			Korisnici koji nisu logovani -->
				<li><%= link_to 'Register New User', new_user_url %></li>
				<li><%= link_to 'Log In', login_url %></li>
			<% end %>
      	</ul>
    </div>
    <div id="main">

      <%= yield %>

    </div>
  </div>

</body>
</html>
