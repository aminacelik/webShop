
<div id="cart_display">
	<h2>Your Cart</h2>

	<div id="product_list">
		<%= render(@cart.line_items) %>
	</div>
	
	<div id="cart_total">
		Total: <%= number_to_currency(@cart.total_price) %>
	</div>

	<div class="buttons">
		<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' }, class: 'cancel_button' %>
		<%= button_to 'Continue', addresses_url, {method: :get,  class: 'button' } %>
    </div>
	
</div>


<div class="default_address">
	<% if @default_address %>
		<%= @default_address.street %><br>
		<%= @default_address.city_details %><br>
		<%= @default_address.country_name %><br>
	<% else %>
		<%= link_to 'Add Address', new_address_path %>
	<% end %>
</div>