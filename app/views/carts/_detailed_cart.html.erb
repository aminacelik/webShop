

	<h1><%= t('.cart_html') %></h1>

	<div id="product_list" class="col-xs-12 col-sm-6" >
		<% items.each do |line_item| %>
    
			<div class="product_in_cart row">
				<%= image_tag line_item.product_variant.product.image_url, class: 'img-responsive col-xs-3' %>
				<div class="product_details col-xs-5">
					 <%= line_item.quantity %>&times; <%= line_item.product_variant.product.title %><br>
					<%= t('.size_html') %>: <%= line_item.product_variant.size.size %><br>
					<%= t('.color') %>: <%= line_item.product_variant.color.name %><br>
				</div>

				<div class="product_price col-xs-3">
					<%= t('.price') %>:<br /> <strong><%= number_to_currency(line_item.product_variant.product.price) %></strong><br>
				</div>


				<div class="delete_icon col-xs-1">
					<%= link_to image_tag('xic.png'), line_item, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
				</div>

			</div>

		<% end %>
	</div>




<% unless @cart.number_of_products == 0 %>
  <div class="order_display col-xs-12 col-sm-6">
  	<div class="step col-xs-12"><%= t('.step_1of2') %></div>
    <div class="col-xs-12"><%= render("carts/order_cart") %></div>
  	<div class="col-xs-12">
	   <%= button_to t('.continue'), addresses_path, method: :get, class: 'btn btn-default grey_button' %>
      <%= button_to t('.empty_cart_button'), @cart, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-default cancel_button' %>
    </div>
  </div>
	

<% else %>
	<h2><%= t('.empty_cart') %></h2>
<% end %>