<h1>Listing category_translations</h1>

<table>
  <thead>
    <tr>
      <th>Language</th>
      <th>Category</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category_translations.each do |category_translation| %>
      <tr>
        <td><%= category_translation.language %></td>
        <td><%= category_translation.category %></td>
        <td><%= category_translation.name %></td>
        <td><%= link_to 'Show', category_translation %></td>
        <td><%= link_to 'Edit', edit_category_translation_path(category_translation) %></td>
        <td><%= link_to 'Delete', category_translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

